                <label asp-for="InputProduct">Manufacturer</label>
            <input asp-for="InputProduct.Manufacturer" class="form-control" id="AddManufacturer">
            <span asp-validation-for="InputProduct.Manufacturer" style="color:darkred"></span>
            </div>

            <div class="form-group">
                <label asp-for="InputProduct">Provider</label>
            <input asp-for="InputProduct.Provider" class="form-control" id="AddProvider">
            <span asp-validation-for="InputProduct.Provider" style="color:darkred"></span>
            </div>*@

      

       
        <button type="submit" class="btn btn-secondary w-25">Commit</button>
    </div>
</form>